@model SportShopAPI.Models.Manufacture
@{
    Layout = "_Layout"; ViewBag.Title = "Get Manufacture by Id";
}

<h2>Get Manufacture by Id <a asp-action="Manufacture" class="btn btn-sm btn-primary">Back</a></h2>
<h3>@ViewBag.StatusCode</h3>
<form asp-action="GetManufactures" asp-controller="Home">
    <div class="form-group">
        <label for="id">Id:</label>
        <input class="form-control" name="id" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Get Shops</button>
    </div>
</form>

@if (Model != null)
{
    <h2>Manufacture</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>ID</th>
                <th>Country</th>
                <th>CompanyName</th>
               
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.IdManufacture</td>
                <td>@Model.Country</td>
                <td>@Model.CompanyName</td>
            </tr>
        </tbody>
    </table>
}
