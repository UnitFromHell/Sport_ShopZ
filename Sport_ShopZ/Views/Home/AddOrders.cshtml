@model SportShopAPI.Models.Order
@{
    Layout = "_Layout"; ViewBag.Title = "Add a Order";
}

<h2>Add a Order <a asp-action="Order" class="btn btn-sm btn-secondary">Back</a></h2>
<form asp-action="AddOrders" method="post">
   
  
    <div>
        <label for="Name">Order_Number:</label>
        <input class="form-control" name="OrderNumber" />
    </div>
    <div class="form-group">
        <label for="Name">Product_Id:</label>
        <input class="form-control" name="ProductId" />
    </div>
    <div class="form-group">
        <label for="Name">User_Id:</label>
        <input class="form-control" name="UserId" />
    </div>
  
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Add</button>
    </div>
</form>

<h3 class="alert">@ViewBag.Result</h3>

@if (Model != null)
{
    <h2>Product</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>ID</th>
                <th>OrderNumber</th>
                <th>ProductId</th>
                <th>UserId</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.IdOrder</td>
                <td>@Model.OrderNumber</td>
                <td>@Model.ProductId</td>
                <td>@Model.UserId</td>
               
            </tr>
        </tbody>
    </table>
}