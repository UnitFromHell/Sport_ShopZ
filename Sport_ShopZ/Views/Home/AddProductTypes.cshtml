@model SportShopAPI.Models.TypeProduct
@{
    Layout = "_Layout"; ViewBag.Title = "Add a ProductType";
}

<h2>Add a ProductType <a asp-action="TypeProduct" class="btn btn-sm btn-secondary">Back</a></h2>
<form asp-action="AddProductTypes" method="post">
    <div class="form-group">
        <label for="Name">Product_Type_Name:</label>
        <input class="form-control" name="ProductTypeName" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Add</button>
    </div>
</form>

<h3 class="alert">@ViewBag.Result</h3>

@if (Model != null)
{
    <h2>Product</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>ID</th>
                <th>ProductTypeName</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.IdTypeProduct</td>
                <td>@Model.NameType</td>
            </tr>
        </tbody>
    </table>
}