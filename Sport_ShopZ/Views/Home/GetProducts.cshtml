@model SportShopAPI.Models.Product
@{
    Layout = "_Layout"; ViewBag.Title = "Get Products by Id";
}

<h2>Get Products by Id <a asp-action="Product" class="btn btn-sm btn-primary">Back</a></h2>
<h3>@ViewBag.StatusCode</h3>
<form asp-action="GetProducts" asp-controller="Home">
    <div class="form-group">
        <label for="id">Id:</label>
        <input class="form-control" name="id" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Get Products</button>
    </div>
</form>

@if (Model != null)
{
    <h2>User</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
               <th>ID</th>
                <th>ProductName</th>
                <th>ProductTypeId</th>
                <th>ManufactureId</th>
                
                <th>ProductCost</th>
                <th>Image</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.IdProduct</td>
                <td>@Model.ProductName</td>
                <td>@Model.TypeProductId</td>
                <td>@Model.ManufactureId</td>
                <td>@Model.ProductCost</td>
                <td>@Model.Image</td>
            </tr>
        </tbody>
    </table>
}
