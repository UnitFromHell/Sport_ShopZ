@model SportShopAPI.Models.User
@{
    Layout = "_Layout"; ViewBag.Title = "Update a Client";
}

<h2>Update a User <a asp-action="Index" class="btn btn-sm btn-secondary">Back</a></h2>
<form method="post">
    <div class="form-group">
        <label asp-for="IdUser"></label>
        <input class="form-control" asp-for="IdUser" readonly />
    </div>
    <div class="form-group">
        <label asp-for="FirstNameUser"></label>
        <input class="form-control" asp-for="FirstNameUser" />
    </div>
    <div class="form-group">
        <label asp-for="SecondNameUser"></label>
        <input class="form-control" asp-for="SecondNameUser" />
    </div>
    <div class="form-group">
        <label asp-for="MiddleNameUser"></label>
        <input class="form-control" asp-for="MiddleNameUser" />
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input class="form-control" asp-for="PhoneNumber" />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input class="form-control" asp-for="Email" />
    </div>
    <div class="form-group">
        <label asp-for="PasswordUser"></label>
        <input class="form-control" asp-for="PasswordUser" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Update</button>
    </div>
</form>

@if (ViewBag.Result == "Success")
{
    @if (Model != null)
    {
                <h2>User</h2>
                <table class="table table-sm table-striped table-bordered m-2">
                    <thead>
                        <tr>
                           <th>ID</th>
                <th>FirstName</th>
                <th>SecondName</th>
                <th>MiddleName</th>
                <th>PhoneNumber</th>
                <th>Email</th>
                <th>Password</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.IdUser</td>
                <td>@Model.FirstNameUser</td>
                <td>@Model.SecondNameUser</td>
                <td>@Model.MiddleNameUser</td>
                <td>@Model.PhoneNumber</td>
                <td>@Model.Email</td>
                <td>@Model.PasswordUser</td>
                        </tr>
                    </tbody>
                </table>
    }
}