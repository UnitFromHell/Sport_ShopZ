@model SportShopAPI.Models.Order
@{
    Layout = "_Layout"; ViewBag.Title = "Get Order by Id";
}

<h2>Get Order by Id <a asp-action="Manufacture" class="btn btn-sm btn-primary">Back</a></h2>
<h3>@ViewBag.StatusCode</h3>
<form asp-action="GetOrders" asp-controller="Home">
    <div class="form-group">
        <label for="id">Id:</label>
        <input class="form-control" name="id" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Get Orders</button>
    </div>
</form>

@if (Model != null)
{
    <h2>Order</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>ID</th>
                <th>OrderNumber</th>
                <th>ProductId</th>
                <th>UserId</th>
                
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.IdOrder</td>
                <td>@Model.OrderNumber</td>
                <td>@Model.ProductId</td>
                <td>@Model.UserId</td>
        </tbody>
    </table>
}
