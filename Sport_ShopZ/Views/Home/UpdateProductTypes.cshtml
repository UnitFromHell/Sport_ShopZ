@model SportShopAPI.Models.TypeProduct
@{
    Layout = "_Layout"; ViewBag.Title = "Update a ProductType";
}

<h2>Update a ProductType <a asp-action="TypeProduct" class="btn btn-sm btn-secondary">Back</a></h2>
<form method="post">
    <div class="form-group">
        <label asp-for="IdTypeProduct"></label>
        <input class="form-control" asp-for="IdTypeProduct" readonly />
    </div>
    <div class="form-group">
        <label for="Name">Product_Type_Name:</label>
        <input class="form-control" name="ProductTypeName" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Update</button>
    </div>
</form>

@if (ViewBag.Result == "Success")
{
    @if (Model != null)
    {
        <h2>User</h2>
        <table class="table table-sm table-striped table-bordered m-2">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>ProductTypeName</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.IdTypeProduct</td>
                    <td>@Model.NameType</td>
                </tr>
            </tbody>
        </table>
    }
}