@model IEnumerable<SportShopAPI.Models.TypeProduct>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout"; ViewBag.Title = "All Type Products";
}

<h2>Типы товаров</h2>
<a asp-action="AddProductTypes" class="btn btn-sm btn-primary">Добавить тип</a>
<a asp-action="GetProductTypes" class="btn btn-sm btn-secondary">Получить тип</a>
<table class="table table-sm table-striped table-bordered m-2">
    <thead>
        <tr>
             <th>ID</th>
                <th>ProductTypeName</th>
                 <th>Update</th>
                <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                 <td>@r.IdTypeProduct</td>
                <td>@r.NameType</td>
                
                
                
                <td>
                    <a asp-action="UpdateProductTypes" asp-route-id="@r.IdTypeProduct">
                        <img src="/png/edit.jpg" />
                    </a>
                </td>
                <td>
                    <form asp-action="DeleteProductTypes" method="post">
                        <input type="hidden" value="@r.IdTypeProduct" name="IdTypeProduct" />
                        <input type="image" src="/png/del.jpg" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>