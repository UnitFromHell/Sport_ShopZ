@model SportShopAPI.Models.TypeProduct
@{
    Layout = "_Layout"; ViewBag.Title = "Get ProductTypes by Id";
}

<h2>Get ProductTypes by Id <a asp-action="TypeProduct" class="btn btn-sm btn-primary">Back</a></h2>
<h3>@ViewBag.StatusCode</h3>
<form asp-action="GetProductTypes" asp-controller="Home">
    <div class="form-group">
        <label for="id">Id:</label>
        <input class="form-control" name="id" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Get ProductTypes</button>
    </div>
</form>

@if (Model != null)
{
    <h2>User</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>ID</th>
                <th>ProductTypeName</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.IdTypeProduct</td>
                <td>@Model.NameType</td>
            </tr>
        </tbody>
    </table>
}
