@model SportShopAPI.Models.Manufacture
@{
    Layout = "_Layout"; ViewBag.Title = "Update a Shop";
}

<h2>Update a Shop <a asp-action="Shop" class="btn btn-sm btn-secondary">Back</a></h2>
<form method="post">
    <div class="form-group">
        <label asp-for="IdManufacture"></label>
        <input class="form-control" asp-for="IdManufacture" readonly />
    </div>
    <div class="form-group">
        <label for="Name">Country:</label>
        <input class="form-control" name="Country" />
    </div>
    <div class="form-group">
        <label for="Name">Company_Name:</label>
        <input class="form-control" name="CompanyName" />
    </div>
  
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Update</button>
    </div>
</form>

@if (ViewBag.Result == "Success")
{
    @if (Model != null)
    {
        <h2>Manufacture</h2>
        <table class="table table-sm table-striped table-bordered m-2">
            <thead>
                <tr>
                      <th>ID</th>
                <th>Country</th>
                <th>CompanyName</th>
               
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.IdManufacture</td>
                <td>@Model.Country</td>
                <td>@Model.CompanyName</td>
                </tr>
            </tbody>
        </table>
    }
}