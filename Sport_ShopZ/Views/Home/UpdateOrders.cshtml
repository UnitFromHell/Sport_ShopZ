@model SportShopAPI.Models.Order
@{
    Layout = "_Layout"; ViewBag.Title = "Update a Order";
}

<h2>Update a Order <a asp-action="Index" class="btn btn-sm btn-secondary">Back</a></h2>
<form method="post">
    <div class="form-group">
        <label asp-for="IdOrder"></label>
        <input class="form-control" asp-for="IdOrder" readonly />
    </div>
    <div class="form-group">
        <label asp-for="OrderNumber"></label>
        <input class="form-control" asp-for="OrderNumber" />
    </div>
    <div class="form-group">
        <label asp-for="ProductId"></label>
        <input class="form-control" asp-for="ProductId" />
    </div>
    <div class="form-group">
        <label asp-for="UserId"></label>
        <input class="form-control" asp-for="UserId" />
    </div>
    
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Update</button>
    </div>
</form>

@if (ViewBag.Result == "Success")
{
    @if (Model != null)
    {
        <h2>User</h2>
        <table class="table table-sm table-striped table-bordered m-2">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>OrderNumber</th>
                    <th>ProductId</th>
                    <th>ShopId</th>
                    <th>ClientId</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                  <td>@Model.IdOrder</td>
                <td>@Model.OrderNumber</td>
                <td>@Model.ProductId</td>
                <td>@Model.UserId</td>
                </tr>
            </tbody>
        </table>
    }
}
